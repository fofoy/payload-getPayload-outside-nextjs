{
  "name": "astro",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "astro": "astro",
    "build": "astro check && astro build",
    "dev": "dotenvx run --convention=nextjs -- cross-env NODE_OPTIONS='--no-deprecation --inspect' astro dev",
    "format": "prettier --check . --ignore-path ../../.gitignore --ignore-path ./.prettierignore",
    "lint": "eslint .",
    "preview": "astro preview",
    "start": "astro dev",
    "typecheck": "tsc --noEmit"
  },
  "prettier": "@local/prettier-config",
  "eslintConfig": {
    "extends": [
      "@local/eslint-config/base",
      "@local/eslint-config/astro"
    ],
    "rules": {
      "consistent-return": [
        "off"
      ],
      "import/extensions": [
        "warn",
        "never",
        {
          "astro": "always"
        }
      ],
      "import/no-unresolved": "off"
    },
    "ignorePatterns": [
      "src/env.d.ts"
    ]
  },
  "dependencies": {
    "@astrojs/check": "^0.9.3",
    "@astrojs/node": "^8.3.3",
    "@astrojs/react": "3.6.2",
    "@astrojs/tailwind": "^5.1.0",
    "@astrojs/ts-plugin": "^1.10.2",
    "@dotenvx/dotenvx": "^1.14.1",
    "@local/env": "workspace:*",
    "@local/eslint-config": "workspace:*",
    "@local/payload": "workspace:*",
    "@local/prettier-config": "workspace:*",
    "@local/tailwind-config": "workspace:*",
    "@local/tsconfig": "workspace:*",
    "@local/types": "workspace:*",
    "@types/node": "^20.16.5",
    "astro": "^4.15.6",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "payload": "3.0.0-beta.108",
    "prettier": "^3.3.3",
    "react": "catalog:next15",
    "react-dom": "catalog:next15",
    "react-image-crop": "10.1.8",
    "tailwindcss": "^3.4.11",
    "typescript": "^5.6.2"
  }
}
