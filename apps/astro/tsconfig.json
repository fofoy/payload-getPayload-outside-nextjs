{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@payload-config": ["./src/payload.config.ts"],
      "@payload-types": ["./src/payload.types.ts"],
      "~/*": ["./src/*"],
      "~layouts/*": ["./src/layouts/*"]
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "verbatimModuleSyntax": true
  },
  "exclude": ["node_modules", "src/env.d.ts"],
  "extends": "astro/tsconfigs/strict",
  "include": [".", "*.astro"]
}
